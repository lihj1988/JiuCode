<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="#FFeeeeee"
              style="@style/Layout.Linear">

    <include layout="@layout/include_topview"></include>
    <include layout="@layout/include_title"></include>

    <android.support.design.widget.TabLayout
        android:id="@+id/mainTabLayout"
        app:tabIndicatorColor="@color/red"
        style="@style/Layout.Tab" />

    <View style="@style/View.Line" />

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:layout_marginTop="@dimen/padding_size_8"
        android:id="@+id/xrvOrder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.jcodecraeer.xrecyclerview.XRecyclerView>

</LinearLayout>