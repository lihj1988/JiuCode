<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:app="http://schemas.android.com/apk/res-auto"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:background="@color/white"
			  android:orientation="vertical">

	<include
		android:id="@+id/title"
		layout="@layout/include_title"/>

	<include layout="@layout/recyclerview_home_header"></include>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<com.jiuwang.buyer.view.AutoScrollRecyclerView
				android:id="@+id/am_rv"
				android:layout_width="match_parent"
				android:layout_height="200dp"/>
		</LinearLayout>

		<ImageView
			android:id="@+id/ivRedPackage"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="@dimen/padding_size_10"
			android:src="@drawable/red_pakage"/>
	</RelativeLayout>
</LinearLayout>
