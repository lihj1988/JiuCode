<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/forget"
        layout="@layout/include_title" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forget"
        android:background="@color/white">

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv2"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:hint="手机号："
            android:maxLength="11"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textSize="@dimen/textsize_16" />

        <EditText
            android:id="@+id/et_messRegist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv3"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/tv_verify"
            android:background="@null"
            android:hint="验证码："
            android:maxLength="4"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textSize="@dimen/textsize_16" />

        <TextView
            android:id="@+id/tv_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv3"
            android:layout_alignRight="@+id/iv3"
            android:layout_marginBottom="5dp"
            android:background="@drawable/text_shape1"
            android:clickable="true"
            android:text="点击获取验证码"
            android:textColor="@android:color/white"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv4"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:hint="设置新密码："
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textSize="@dimen/textsize_16" />

        <EditText
            android:id="@+id/et_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv5"
            android:layout_alignLeft="@+id/iv5"
            android:layout_marginBottom="5dp"
            android:background="@null"
            android:hint="再次输入新密码："
            android:inputType="textPassword"
            android:maxLength="20"
            android:singleLine="true"
            android:textSize="@dimen/textsize_16" />


        <TextView
            android:id="@+id/tv_daojishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv3"
            android:layout_alignRight="@+id/iv3"
            android:layout_marginBottom="5dp"
            android:background="@drawable/text_shape1"
            android:text="60秒后重新发送"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:visibility="invisible" />


        <View
            android:id="@+id/iv2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="50dp"
            android:background="#a9a9a9" />

        <View
            android:id="@+id/iv3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="100dp"
            android:background="#a9a9a9" />

        <View
            android:id="@+id/iv4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="150dp"
            android:background="#a9a9a9" />

        <View
            android:id="@+id/iv5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="200dp"
            android:background="#a9a9a9" />

    </RelativeLayout>

    <Button
        android:id="@+id/bt_regist"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/relativeLayout2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_selecter"
        android:text="确认"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/bt_regist"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp" />

</RelativeLayout>