<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_normal_shape"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_size_30"
            android:layout_gravity="center_vertical"
            android:background="@drawable/dialog_direct_shape_title"
            android:gravity="center"
            android:text="标题"
            android:textColor="@color/white"
            android:textSize="@dimen/font_normal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/padding_size_30"
            android:layout_marginRight="@dimen/padding_size_30"
            android:layout_marginTop="@dimen/padding_size_20"
            android:ellipsize="end"
            android:gravity="center"
            android:textColor="@color/app_main_color"
            android:textSize="@dimen/font_normal" />

        <RelativeLayout
            android:id="@+id/relative_button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_size_10"
            android:layout_marginTop="@dimen/padding_size_20"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/bt1_quxiao"
                android:layout_width="@dimen/padding_size_60"
                android:layout_height="@dimen/padding_size_30"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/padding_size_40"
                android:background="@drawable/rectangle_pic"
                android:text="@string/cancle"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <Button
                android:id="@+id/bt2_queding"
                android:layout_width="@dimen/padding_size_60"
                android:layout_height="@dimen/padding_size_30"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/padding_size_40"
                android:background="@drawable/rectangle_pic"
                android:clickable="true"
                android:onClick="doClick"
                android:text="@string/sure"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_size_10"
            android:visibility="gone"
            android:layout_marginTop="@dimen/padding_size_20"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button"
                android:layout_width="@dimen/padding_size_60"
                android:layout_height="@dimen/padding_size_30"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/padding_size_40"
                android:background="@drawable/rectangle_pic"
                android:text="@string/sure"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>