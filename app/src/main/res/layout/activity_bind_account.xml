<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <include layout="@layout/include_topview"></include>
    <include layout="@layout/include_title"></include>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/textsize_16"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text=""
            android:padding="@dimen/padding_size_10"
            android:id="@+id/tvAli"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_pay_alipay"
            android:drawableStart="@drawable/ic_pay_alipay"/>
        <TextView
            android:id="@+id/tvEditALi"
            android:textColor="@color/blue"
            android:textSize="@dimen/textsize_13"
            android:layout_marginRight="10dp"
            android:text="去绑定"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View style="@style/View.Line" />
    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/textsize_16"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text=""
            android:padding="@dimen/padding_size_10"
            android:id="@+id/tvWX"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_pay_wx"
            android:drawableStart="@drawable/ic_pay_wx"/>
        <TextView
            android:id="@+id/tvEditWx"
            android:textColor="@color/blue"
            android:textSize="@dimen/textsize_13"
            android:layout_marginRight="10dp"
            android:text="去绑定"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>