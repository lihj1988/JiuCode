<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:orientation="vertical">

	<include layout="@layout/include_topview"></include>

	<include layout="@layout/include_title"></include>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white"
		android:gravity="center_vertical">

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="horizontal"
			android:padding="@dimen/padding_size_10">

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ic_pay_alipay"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/padding_size_10"
				android:gravity="center_vertical"
				android:orientation="vertical">

				<TextView
					android:id="@+id/tvAliName"
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_weight="1"
					android:gravity="center_vertical"
					android:text="1"
					android:textSize="@dimen/textsize_14"/>

				<TextView
					android:id="@+id/tvAliAccount"
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_weight="1"
					android:gravity="center_vertical"
					android:text="1"
					android:textSize="@dimen/textsize_14"/>
			</LinearLayout>
		</LinearLayout>

		<TextView
			android:id="@+id/tvEditALi"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="10dp"
			android:text="去绑定"
			android:visibility="invisible"
			android:textColor="@color/blue"
			android:textSize="@dimen/textsize_13"/>
	</LinearLayout>


	<View style="@style/View.Line"/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white"
		android:gravity="center_vertical">

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="horizontal"
			android:padding="@dimen/padding_size_10">

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ic_pay_wx"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/padding_size_10"
				android:gravity="center_vertical"
				android:orientation="vertical">

				<TextView
					android:id="@+id/tvWXName"
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_weight="1"
					android:gravity="center_vertical"
					android:text="1"
					android:textSize="@dimen/textsize_14"/>

				<TextView
					android:id="@+id/tvWXAccount"
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_weight="1"
					android:gravity="center_vertical"
					android:text="1"
					android:textSize="@dimen/textsize_14"/>
			</LinearLayout>
		</LinearLayout>

		<TextView
			android:visibility="invisible"

			android:id="@+id/tvEditWx"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="10dp"
			android:text="去绑定"
			android:textColor="@color/blue"
			android:textSize="@dimen/textsize_13"/>
	</LinearLayout>


</LinearLayout>