<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:id="@+id/screen"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:background="@drawable/bg_login"
			  android:orientation="vertical">

	<LinearLayout
		android:id="@+id/topView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/app_main_color"
		android:orientation="horizontal"/>

	<ImageView
		style="@style/ImageView.Avatar"
		android:layout_gravity="center"
		android:layout_marginBottom="32dip"
		android:layout_marginTop="64dip" />


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:paddingTop="@dimen/padding_size_25">


		<LinearLayout

			android:id="@+id/linear1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingBottom="@dimen/padding_size_10"
			android:paddingLeft="@dimen/padding_size_40"
			android:paddingRight="@dimen/padding_size_40"
			android:paddingTop="@dimen/padding_size_10">


			<EditText
				android:id="@+id/etNumber"
				android:layout_width="180dp"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:background="@null"
				android:hint="请输入帐号/手机号"
				android:maxLength="20"
				android:paddingLeft="@dimen/padding_size_10"
				android:singleLine="true"
				android:textSize="@dimen/textsize_14"/>
		</LinearLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="@dimen/padding_size_0.5"
			android:background="@color/gray_line"/>

		<LinearLayout
			android:id="@+id/linear2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingBottom="@dimen/padding_size_10"
			android:paddingLeft="@dimen/padding_size_40"
			android:paddingRight="@dimen/padding_size_40"
			android:paddingTop="@dimen/padding_size_10">


			<EditText
				android:id="@+id/etPwd"
				android:layout_width="180dp"
				android:layout_height="wrap_content"
				android:background="@null"
				android:hint="请输入登录密码      "
				android:inputType="textPassword"
				android:maxLength="20"
				android:paddingLeft="@dimen/padding_size_10"
				android:singleLine="true"
				android:textSize="@dimen/textsize_14"/>
		</LinearLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="@dimen/padding_size_0.5"
			android:background="@color/gray_line"/>



		<TextView
			android:id="@+id/subBtn"
			android:layout_width="match_parent"
			android:layout_height="@dimen/padding_size_40"
			android:layout_marginBottom="@dimen/padding_size_15"
			android:layout_marginLeft="@dimen/padding_size_30"
			android:layout_marginRight="@dimen/padding_size_30"
			android:layout_marginTop="@dimen/padding_size_15"
			android:background="@drawable/rectangle_pic"
			android:gravity="center"
			android:text="登   录"
			android:textColor="@color/white"
			android:textSize="@dimen/text_big"
			android:textStyle="bold"/>
	</LinearLayout>

	<RelativeLayout
		style="@style/Layout.LinearHor"
		android:paddingLeft="68dip"
		android:paddingRight="68dip">

		<TextView
			android:id="@+id/registerTextView"
			style="@style/TextView.Register" />

		<TextView
			android:id="@+id/findTextView"
			style="@style/TextView.Register"
			android:layout_alignParentEnd="true"
			android:layout_alignParentRight="true"
			android:text="找回密码" />

	</RelativeLayout>
</LinearLayout>