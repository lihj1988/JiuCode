<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/include_topview"></include>
    <include layout="@layout/include_title"></include>
   <LinearLayout
       android:layout_marginTop="100dp"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <TextView
           android:id="@+id/tvInviteCode"
           android:text="我的邀请码：13649785"
           android:textColor="@color/black"
           android:layout_marginTop="@dimen/padding_size_10"
           android:textSize="@dimen/textsize_16"
           android:gravity="center_horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>
       <ImageView
           android:id="@+id/ivInviteCode"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>

       <TextView
           android:layout_marginTop="@dimen/padding_size_10"
           android:textSize="@dimen/textsize_14"
           android:hint="@string/invite_code_desc"
           android:gravity="center_horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>
   </LinearLayout>
</LinearLayout>